rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // This rule allows any authenticated user to perform all actions
    // on the 'videos' collection. This is permissive for development.
    match /videos/{videoId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
  }
}
