rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // This rule allows a user to read and write documents in the 'videos'
    // collection, but only if the 'userId' field in the document matches
    // the user's own authentication UID.
    match /videos/{videoId} {
      allow read, delete, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
